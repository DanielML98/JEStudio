<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">
    <!---Header profile View-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="8dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="600dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView1"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daniel Martinez"
                android:textColor="@color/je_purple_700"
                android:textSize="48sp"
                android:fontFamily="@font/montserrat_regular"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
    <!---Settings View-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/je_purple_500"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/classes_setting"
        android:textSize="34sp"
        android:fontFamily="@font/montserrat_regular"
        android:textAllCaps="false"
        android:textColor="@color/je_purple_700"
        android:backgroundTint="@color/white"
        android:gravity="left"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/payments_setting"
        android:textSize="34sp"
        android:fontFamily="@font/montserrat_regular"
        android:textAllCaps="false"
        android:textColor="@color/je_purple_700"
        android:backgroundTint="@color/white"
        android:gravity="left"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/notifications_setting"
        android:textSize="34sp"
        android:fontFamily="@font/montserrat_regular"
        android:textAllCaps="false"
        android:textColor="@color/je_purple_700"
        android:backgroundTint="@color/white"
        android:gravity="left"/>
</LinearLayout>

</LinearLayout>