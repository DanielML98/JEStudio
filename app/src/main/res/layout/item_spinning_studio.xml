<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_spinning_studio"
            tools:srcCompat="@drawable/ic_spinning_studio" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvStudioName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_variable_font_wght"
                android:textColor="@color/je_purple_700"
                android:textSize="34sp"
                android:textStyle="normal"
                tools:text="Sucursal" />

            <TextView
                android:id="@+id/tvCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_variable_font_wght"
                android:textColor="@color/je_purple_500"
                android:textSize="16sp"
                tools:text="Capacidad: n bicicletas" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>